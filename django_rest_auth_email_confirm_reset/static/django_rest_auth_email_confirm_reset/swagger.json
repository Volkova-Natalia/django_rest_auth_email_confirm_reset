            "maxLength": 254,
            "nullable": false,
            "uniqueItems": false
          },
          "password": {
            "$ref": "#/components/schemas/user/properties/password"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },

      "user_login_response": {
        "type": "object",
        "properties": {
          "email": {
            "$ref": "#/components/schemas/user/properties/email"
          },
          "password": {
            "$ref": "#/components/schemas/user/properties/password"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },

      "user_logout_response": {
        "type": "object",
        "properties": {
          "email": {
            "$ref": "#/components/schemas/user/properties/email"
          },
          "password": {
            "$ref": "#/components/schemas/user/properties/password"
          }
        },
        "required": [
          "email",
          "password"
        ]
