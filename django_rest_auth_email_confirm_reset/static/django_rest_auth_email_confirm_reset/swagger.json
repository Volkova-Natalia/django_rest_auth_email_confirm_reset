          "name": {
            "$ref": "#/components/schemas/user/properties/name"
          },
          "password": {
            "$ref": "#/components/schemas/user/properties/password"
          },
          "last_login": {
            "$ref": "#/components/schemas/user/properties/last_login"
          }
        },
        "required": [
          "email",
          "name",
          "password",
          "last_login"
        ]
      },

      "user_login_request": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
